#! /bin/bash


VOLTAGE_ROOT="$(dirname "$(which $0)")"/..

# Python for Windows doesn't understand cygwin absolute paths
# so convert to Windows style if running on cygwin
uname | grep -i -q 'cygwin'
if [ $? -eq 0 ]; then
    VOLTAGE_ROOT=$(cygpath -aw $VOLTAGE_ROOT)
fi

#If no command line arguments are specified show the help message`
if [ $# -eq 0 ]
then
    python -m trace -trace $VOLTAGE_ROOT/voltage/testrunner/runner.py -h
else
    python -m trace --trace $VOLTAGE_ROOT/voltage/testrunner/runner.py $@
fi

